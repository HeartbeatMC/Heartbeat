{
  "schemaVersion": 1,
  "id": "heartbeat",
  "version": "${version}",
  "name": "Heartbeat",
  "description": "Library used in all of our mods. It's purpose is to translate the most common Forge API calls into Fabric and provide a base for custom content.",
  "authors": [
    "The HeartbeatMC Dev Team"
  ],
  "contact": {
    "homepage": "https://heartbeatmc.com/",
    "sources": "https://github.com/HeartbeatMC/Heartbeat"
  },
  "license": "LGPL-3.0",
  "icon": "assets/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.heartbeatmc.heartbeat.Heartbeat"
    ]
  },
  "mixins": [
    "Heartbeat.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.11.6",
    "fabric": "*",
    "minecraft": "1.17.1"
  }
}
